<!DOCTYPE html>
<html lang="en">

<body>


  <main>
    <div class="account-update">
      <h1><%= title %></h1>
      
      
      <% if (messages && messages.notice) { %>
        <div class="alert alert-info"><%= messages.notice %></div>
      <% } %>
      
   
      <% if (errors && errors.length > 0) { %>
        <ul class="errors">
          <% errors.forEach(error => { %>
            <li><%= error %></li>
          <% }) %>
        </ul>
      <% } %>
      
      <form action="/account/update" method="post" class="account-form">
        <h2>Account Update</h2>
        <input type="hidden" name="account_id" value="<%= accountData.account_id %>">
        
        <div class="form-group">
          <label for="account_firstname">First Name</label>
          <input type="text" name="account_firstname" id="account_firstname" 
                 value="<%= accountData.account_firstname %>" required>
        </div>
        
        <div class="form-group">
          <label for="account_lastname">Last Name</label>
          <input type="text" name="account_lastname" id="account_lastname" 
                 value="<%= accountData.account_lastname %>" required>
        </div>
        
        <div class="form-group">
          <label for="account_email">Email</label>
          <input type="email" name="account_email" id="account_email" 
                 value="<%= accountData.account_email %>" required>
        </div>
        
        <button type="submit" class="btn btn-primary">Update Account</button>
      </form>
      
      <form action="/account/update-password" method="post" class="password-form">
        <h2>Change Password</h2>
        <input type="hidden" name="account_id" value="<%= accountData.account_id %>">
        
        <div class="form-group">
          <label for="account_password">New Password</label>
          <input type="password" name="account_password" id="account_password" required>
          <small>Password must be at least 12 characters and contain at least 1 uppercase letter, 1 lowercase letter, 1 number, and 1 special character.</small>
        </div>
        
        <button type="submit" class="btn btn-primary">Change Password</button>
      </form>
    </div>
  </main>


</body>
</html>